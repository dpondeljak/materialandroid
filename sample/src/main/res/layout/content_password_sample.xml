<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mdpassword="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".components.PasswordFieldsSampleActivity"
    tools:showIn="@layout/activity_password_sample">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.github.andrewlord1990.materialandroid.PasswordEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/control_padding"
            android:text="@string/sample_password_text"
            mdpassword:md_password_shown="true"/>

        <com.github.andrewlord1990.materialandroid.PasswordEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/control_padding"
            android:text="@string/sample_password_text"
            mdpassword:md_password_toggle_type="strikethrough"/>

        <com.github.andrewlord1990.materialandroid.PasswordEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/control_padding"
            android:text="@string/sample_password_text"
            mdpassword:md_drawable_tint_color="@color/md_green_a200"/>

        <com.github.andrewlord1990.materialandroid.PasswordEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/control_padding"
            android:text="@string/sample_password_text"
            mdpassword:md_password_hidden_drawable="@drawable/ic_cross_24dp"
            mdpassword:md_password_shown_drawable="@drawable/ic_tick_24dp"/>

    </LinearLayout>

</ScrollView>