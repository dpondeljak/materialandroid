<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingTop="@dimen/ma_screen_edge_margin_vertical"
    android:paddingBottom="@dimen/ma_screen_edge_margin_vertical"
    android:paddingLeft="@dimen/ma_screen_edge_margin_horizontal"
    android:paddingStart="@dimen/ma_screen_edge_margin_horizontal"
    android:paddingRight="@dimen/ma_screen_edge_margin_horizontal"
    android:paddingEnd="@dimen/ma_screen_edge_margin_horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SampleActivity"
    tools:showIn="@layout/activity_sample">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <FrameLayout
          android:layout_width="@dimen/color_square_bg_size"
          android:layout_height="@dimen/color_square_bg_size"
          android:layout_margin="@dimen/control_padding"
          android:background="@color/color_square_background">

        <View
            android:id="@+id/primary_color_square"
            android:layout_width="@dimen/color_square_size"
            android:layout_height="@dimen/color_square_size"
            android:layout_gravity="center"
            tools:background="@color/ma_cyan_500"/>

      </FrameLayout>

      <FrameLayout
          android:layout_width="@dimen/color_square_bg_size"
          android:layout_height="@dimen/color_square_bg_size"
          android:layout_margin="@dimen/control_padding"
          android:background="@color/color_square_background">

        <View
            android:id="@+id/accent_color_square"
            android:layout_width="@dimen/color_square_size"
            android:layout_height="@dimen/color_square_size"
            android:layout_gravity="center"
            tools:background="@color/ma_red_a200"/>

      </FrameLayout>

      <Button
          android:id="@+id/color_sample_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="@dimen/control_padding"
          android:layout_marginStart="@dimen/control_padding"
          android:text="@string/sample_color"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginTop="@dimen/control_padding"
        android:layout_marginBottom="@dimen/control_padding"
        android:background="@color/ma_divider_dark_12"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/control_padding">

      <Button
          android:id="@+id/typography_sample_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:text="@string/sample_typography"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginTop="@dimen/control_padding"
        android:layout_marginBottom="@dimen/control_padding"
        android:background="@color/ma_divider_dark_12"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/control_padding">

      <Button
          android:id="@+id/components_sample_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:text="@string/sample_components"/>

    </RelativeLayout>

  </LinearLayout>

</ScrollView>
