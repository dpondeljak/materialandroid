<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingTop="@dimen/ma_screen_edge_margin_vertical"
    android:paddingBottom="@dimen/ma_screen_edge_margin_vertical"
    android:paddingLeft="@dimen/ma_screen_edge_margin_horizontal"
    android:paddingStart="@dimen/ma_screen_edge_margin_horizontal"
    android:paddingRight="@dimen/ma_screen_edge_margin_horizontal"
    android:paddingEnd="@dimen/ma_screen_edge_margin_horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".components.ComponentsSampleActivity"
    tools:showIn="@layout/activity_components_sample">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <Spinner
        android:id="@+id/list_types"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/control_padding"
        android:entries="@array/list_sample_types"/>

    <Button
        android:id="@+id/lists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/control_padding"
        android:text="@string/sample_components_lists_button"/>

    <Spinner
        android:id="@+id/grid_types"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/control_padding"
        android:layout_marginBottom="@dimen/control_padding"
        android:entries="@array/grid_sample_types"/>

    <Button
        android:id="@+id/grids"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/sample_components_grids_button"/>

    <Button
        android:id="@+id/textFields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/control_padding"
        android:text="@string/sample_components_text_fields_button"/>

    <Button
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/control_padding"
        android:text="@string/sample_components_password_button"/>

  </LinearLayout>

</ScrollView>