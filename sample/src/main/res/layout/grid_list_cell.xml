<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mdgrid="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <ImageView
      android:id="@+id/image"
      android:layout_width="match_parent"
      android:layout_height="@dimen/grid_cell_size"
      android:contentDescription="@string/sample_grids_image_cd"
      tools:background="@color/ma_amber_500"/>

  <com.github.andrewlord1990.materialandroid.component.grid.GridItemView
      android:id="@+id/label"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/ma_text_dark_disabled_hint_38"
      mdgrid:ma_grid_icon="@drawable/ic_star_white"
      mdgrid:ma_grid_text_primary_color="@color/ma_text_light_primary_100"
      mdgrid:ma_grid_text_secondary="@string/sample_lists_secondary"
      mdgrid:ma_grid_text_secondary_color="@color/ma_text_light_primary_100"
      tools:layout_alignBottom="@id/image"
      tools:layout_height="48dp"/>

</RelativeLayout>