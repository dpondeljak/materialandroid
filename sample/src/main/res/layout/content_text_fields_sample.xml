<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".components.TextFieldsSampleActivity"
    tools:showIn="@layout/activity_text_fields_sample">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <EditText
        style="@style/MAFullWidthEditText"
        android:hint="@string/sample_text_fields_1_hint"
        android:inputType="textEmailAddress"/>

    <include layout="@layout/ma_divider_horizontal_dark"/>

    <EditText
        style="@style/MAFullWidthEditText"
        android:hint="@string/sample_text_fields_2_hint"
        android:inputType="textEmailSubject"/>

    <include layout="@layout/ma_divider_horizontal_dark"/>

    <EditText
        style="@style/MAFullWidthEditText"
        android:hint="@string/sample_text_fields_3_hint"
        android:inputType="textMultiLine"/>

  </LinearLayout>

</ScrollView>