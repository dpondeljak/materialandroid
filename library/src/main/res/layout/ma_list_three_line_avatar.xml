<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <ImageView
      android:id="@+id/list_avatar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_marginTop="@dimen/ma_list_multi_line_item_avatar_icon_padding_top"
      android:layout_marginLeft="@dimen/ma_list_item_edges_padding"
      android:layout_marginStart="@dimen/ma_list_item_edges_padding"
      android:contentDescription="@string/list_item_avatar_cd"
      tools:src="@drawable/ic_avatar_circle"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginTop="@dimen/ma_list_item_edges_padding"
      android:layout_marginBottom="@dimen/ma_list_item_edges_padding"
      android:layout_marginLeft="@dimen/ma_list_item_text_edge_padding_start"
      android:layout_marginStart="@dimen/ma_list_item_text_edge_padding_start"
      android:layout_marginRight="@dimen/ma_list_item_edges_padding"
      android:layout_marginEnd="@dimen/ma_list_item_edges_padding"
      android:orientation="vertical">

    <TextView
        android:id="@+id/list_primary_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ma_list_item_line_spacing"
        android:textColor="@color/ma_list_item_primary_text"
        android:textSize="@dimen/ma_list_item_primary_text"
        tools:text="Three-line item"/>

    <TextView
        android:id="@+id/list_secondary_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ma_list_item_line_spacing"
        android:textColor="@color/ma_list_item_secondary_text"
        android:textSize="@dimen/ma_list_item_secondary_text"
        tools:text="Secondary text"/>

    <TextView
        android:id="@+id/list_tertiary_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/ma_list_item_tertiary_text"
        android:textSize="@dimen/ma_list_item_secondary_text"
        tools:text="Tertiary text"/>

  </LinearLayout>

</RelativeLayout>